#!/bin/bash

# t/setup

# Set script to exit on error
set -e

echo "ğŸš€ Setting up project..."

# Frontend setup
echo "ğŸ“¦ Installing frontend dependencies..."
cd app
yarn install
cd ..

# Backend setup
echo "ğŸ”§ Setting up .NET dependencies..."
cd ApiServer

# Check if .NET SDK is installed
if ! command -v dotnet &> /dev/null; then
    echo "âŒ .NET SDK not found. Please install .NET SDK first."
    echo "Visit https://dotnet.microsoft.com/download for installation instructions."
    exit 1
fi

# Restore .NET packages
echo "ğŸ“¦ Restoring .NET packages..."
dotnet restore

cd ..

echo "âœ… Setup complete!"
echo "To start the project, run: ./t/start"